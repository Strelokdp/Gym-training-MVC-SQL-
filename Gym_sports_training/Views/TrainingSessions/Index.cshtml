@model IEnumerable<Gym_sports_training.Models.Entities.TrainingSession>

@{
    ViewBag.Title = "Training sessions schedule";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Phone Number", "Index", new { sortOrder = ViewBag.PhoneSortParm })
        </th>
        <th>
            Coach
        </th>
        <th>
            @Html.ActionLink("Training start time", "Index", new { sortOrder = ViewBag.TrainingStartSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coach.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingTimeStart)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
